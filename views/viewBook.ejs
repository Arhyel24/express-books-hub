<!-- views/book.ejs -->
<h1 class="text-3xl font-bold text-center my-8"><%= book.title %></h1>
<div class="bg-white rounded-lg shadow-lg p-4">
    <img src="<%= book.imageUrl %>" alt="Book Cover" class="rounded-t-lg w-full">
    <p class="text-gray-600">Author: <%= book.author %></p>
    <p class="text-gray-600">Uploaded by: <%= book.uploadedBy.username %></p>
    <p class="mt-4"><%= book.description %></p> <!-- Display the description here -->
    
    <!-- Show Download button for all users -->
    <a href="/books/<%= book._id %>/download" class="bg-green-500 text-white py-2 px-4 rounded mt-4 inline-block">Download</a>

    <% if (book.uploadedBy === currentUserId) { %>
        <!-- Show Edit and Delete buttons for the user who uploaded the book -->
        <a href="/books/<%= book._id %>/edit" class="bg-yellow-500 text-white py-2 px-4 rounded mt-4 inline-block">Edit</a>
        <form action="/books/<%= book._id %>/delete" method="POST" class="inline-block mt-4">
            <button type="submit" class="bg-red-500 text-white py-2 px-4 rounded">Delete</button>
        </form>
    <% } %>
</div>
<a href="/books" class="bg-blue-500 text-white py-2 px-4 rounded mt-4 inline-block">Back to Books</a>
