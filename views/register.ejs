<% layout('layout') %>
<h1 class="text-3xl font-bold text-center my-8">Register</h1>
<form action="/register" method="POST" class="max-w-md mx-auto">
    <input type="text" name="username" placeholder="Username" required class="border p-2 w-full mb-4">
    <input type="password" name="password" placeholder="Password" required class="border p-2 w-full mb-4">
    <button type="submit" class="bg-blue-500 text-white py-2 px-4 rounded">Register</button>
</form>
